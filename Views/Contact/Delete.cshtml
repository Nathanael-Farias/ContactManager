@model AuthSystem.Models.ContactModel

@{
    ViewData["Title"] = "Confirm Deletion";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="text-center" style="transform: scale(1.5);">
        <h1>Confirm Deletion</h1>
        <p>Are you sure you want to delete the following contact?</p>

        <div>
            <strong>Name:</strong> @Model.Name <br />
            <strong>Email:</strong> @Model.Email <br />
            <strong>Phone Number:</strong> @Model.Phone
        </div>

        <form asp-controller="Contact" asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-controller="Contact" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
